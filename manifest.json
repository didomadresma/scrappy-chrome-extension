{
  "name": "Scrappy",
  "version": "0.1.0",
  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*/*"
  ],
   "icons": { 
		"16": "img/icon16.jpg",
           	"48": "img/icon48.jpg",
          	"128": "img/icon128.jpg" 
  },
   "browser_action": {
      "default_icon": "img/icon48.jpg",
      "default_title": "Scrappy"
   },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"]
    }
  ],
  "content_security_policy": "default-src 'none'; script-src 'self'"
}
