{
  "name": "Scrappy",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "A chrome extension for scrappy.",
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "icons": { 
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
  "browser_action": {
    "default_icon": "img/logo48.png",
    "default_title": "Scrappy"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "css/cssreset-context-min.css", 
        "css/cssbase-context-min.css", 
        "css/general.css", 
        "css/sidebar.css", 
        "css/smoothness/jquery-ui-1.9.1.custom.min.css",
        "css/smoothness/jquery-ui-chrome-extension.css"
      ],
      "js": [
        "js/constants.js", 
        "js/sidebar.js", 
        "js/page.js", 
        "js/jquery-1.8.2.min.js", 
        "js/jquery-ui-1.9.1.custom.min.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "html/sidebar.html", 
    "img/logo_gsi.png", 
    "img/financiacion150.jpg", 
    "img/episteme.jpg",
    "img/globalmetanoia.jpg",
    "img/delete.png"
  ]
}
