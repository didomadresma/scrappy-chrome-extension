{
  "name": "Scrappy",
  "version": "0.1.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "icons": { 
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
   "browser_action": {
      "default_icon": "img/logo48.png",
      "default_title": "Scrappy"
   },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/constants.js"]
    }
  ]
}
