{
  "name": "Scrappy",
  "version": "0.1.0",
  "description": "A chrome extension for scrappy.",
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "tabs", "http://*/*"
  ],
  "icons": { 
    "16": "img/logo16.png",
    "48": "img/logo48.png",
    "128": "img/logo128.png"
  },
   "browser_action": {
      "default_icon": "img/logo48.png",
      "default_title": "Scrappy"
   },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/general.css", "css/sidebar.css", "css/smoothness/jquery-ui-1.8.20.css", "css/smoothness/jquery-ui-chrome-extension.css"],
      "js": ["js/constants.js", "js/content_scripts.js", "js/jquery-1.7.2.min.js", "js/jquery-ui-1.8.20.min.js"]
    }
  ]
}
